main_menu() {
    while true; do
        show_banner
        echo -e "${GREEN}REAL Penetration Testing Menu:${NC}"
        echo "1. ğŸ¯ REAL Comprehensive Attack (Full Audit)"
        echo "2. ğŸ” Advanced Reconnaissance"
        echo "3. ğŸ›¡ï¸  Vulnerability Scanner"
        echo "4. âš”ï¸  SQL Injection Exploitation"
        echo "5. ğŸ•µï¸  Setup Anonymity (Tor + Proxies)"
        echo "6. ğŸ”§ Generate Web Shells"
        echo "7. ğŸ“Š View Scan Results"
        echo "8. ğŸ§¹ REAL Anti-Forensics Cleanup"
        echo "9. ğŸ”„ Update Tool"
        echo "0. ğŸšª Exit"
        echo ""
        read -p "Select option (0-9): " choice
        
        case $choice in
            1) real_comprehensive_attack ;;
            2) advanced_recon ;;
            3) vulnerability_scanner ;;
            4) sql_injection_exploitation ;;
            5) setup_anonymity ;;
            6) web_shell_generation ;;
            7) view_scan_results ;;
            8) real_cleanup ;;
            9) update_tool ;;
            0)
                info "Thank you for using MUGI TOOL v$VERSION!"
                info "Stay ethical and authorized!"
                exit 0
                ;;
            *) error "Invalid option!" ;;
        esac
        
        echo ""
        read -p "Press Enter to continue..."
    done
}

# Initialize
init() {
    check_dependencies
    main_menu
}

# Start the tool
init "$@"
